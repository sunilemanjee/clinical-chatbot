# Azure TTS Talking Avatar - Environment Variables Template
# Copy this file to variables.env and fill in your actual values
# DO NOT commit variables.env to version control

# Azure Speech Service Configuration
SPEECH_REGION=your-region-here
SPEECH_KEY=your-speech-api-key-here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your-openai-endpoint-here
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name-here

# Elasticsearch Configuration (Required for MCP integration)
ELASTIC_URL=your-elastic-url-here
ELASTIC_API_KEY=your-elastic-api-key-here
ELASTIC_INDEX_NAME=clinical-patient-data
